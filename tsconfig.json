    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "lib": ["es2023"],
        "module": "nodeNext",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "moduleDetection": "force"
    },
    "includes" : ["src"]
}